<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9EAEE"
    tools:context="com.zhongtianli.overalls.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#385696"
        android:fitsSystemWindows="true"
        app:title=" ">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EAEEF7"
            android:layout_marginLeft="50dp"
            android:text="工作服管理"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EAEEF7"
            android:layout_marginLeft="10dp"
            android:text="Massky"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EAEEF7"
            android:layout_marginLeft="10dp"
            android:text="智慧酒店"/>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#203469"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#385696"
        android:id="@+id/tab_select"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/txt_store"
            android:text="存储"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="取出"
            android:id="@+id/txt_take_out"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frame_container"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"></FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!sKdfdfdfjdfhzjksdfhguhgj"
        android:layout_marginTop="100dp"
        />
</LinearLayout>
