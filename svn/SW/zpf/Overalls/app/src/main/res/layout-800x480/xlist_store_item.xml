<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="5"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">
   <ImageView
       android:layout_width="0dp"
       android:layout_weight="0.5"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:src="@drawable/circle_fill"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_label"
                android:textSize="13sp"
                android:textColor="#010101"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="自定义的名称"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:id="@+id/inTime"
                android:gravity="right"
                android:textSize="12sp"
                android:textColor="#738DB0"
                android:text="2016-12-14 12:03:04"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#000000"
                android:id="@+id/yuan_gong_name"
                android:text="小周周"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_height="15dp" android:src="@drawable/arrow"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="#C1C1C1"
            android:layout_marginBottom="5dp"
            android:id="@+id/clothes_id"
            android:layout_height="wrap_content" android:text="sdfsdfjglsdjfgldjf"/>
    </LinearLayout>
</LinearLayout>