<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9EAEE"
    tools:context="com.zhongtianli.overalls.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#385696"
        android:fitsSystemWindows="true"
        app:title=" ">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#EAEEF7"

                android:id="@+id/txt_clothe"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
                android:text="工作服管理"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EAEEF7"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
                android:id="@+id/mass_txt"
                android:layout_toRightOf="@+id/txt_clothe"
                android:text="Massky"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EAEEF7"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
                android:id="@+id/smart_txt"
                android:layout_toRightOf="@+id/mass_txt"
                android:text="智慧酒店"/>
            <LinearLayout
                android:layout_width="30dp"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:id="@+id/pop_menu_lay"
                android:layout_height="wrap_content">
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_marginTop="3dp"
                  android:layout_gravity="center_horizontal"
                  android:id="@+id/img_first"
                  android:src="@drawable/circle_menu_select"
                  android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/img_second"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/circle_menu_select"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/img_third"
                    android:src="@drawable/circle_menu_select"
                    android:layout_weight="1"/>
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#203469"></View>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#385696"
        android:id="@+id/tab_select"
        >
        <LinearLayout android:layout_width="wrap_content"
            android:id="@+id/card_lia_left"
            android:orientation="vertical"
            app:layout_widthPercent="40%"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/text_card_select"
            android:layout_height="30dp">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/txt_store"
            android:text="库存"
            android:gravity="center"
           />

        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:id="@+id/card_lia_right"
            android:orientation="vertical"
            app:layout_widthPercent="40%"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_card_select"
            android:layout_height="30dp">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="领取"
            android:id="@+id/txt_take_out"
            android:gravity="center"
         />
        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frame_container"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>
