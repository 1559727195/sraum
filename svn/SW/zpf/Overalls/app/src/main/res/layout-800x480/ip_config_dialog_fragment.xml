<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.0dip"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear"
    android:background="#18223A"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:background="#18223A"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="220dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/dialog_radius"></LinearLayout>
        </LinearLayout>
        <com.zhongtianli.overalls.view.CircleImageView
            android:id="@+id/cv_1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/delete_er"
            android:layout_gravity="center_horizontal"
          />
    </FrameLayout>

    <LinearLayout
        android:layout_width="220dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_radius_linear"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#26347F"
            android:layout_gravity="center_horizontal"
            android:text="服务器地址"/>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/editsharp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/name_txt"
            android:layout_height="wrap_content">
            <EditText  android:layout_width="0dp"
                app:layout_widthPercent="80%"
                android:id="@+id/ip_txt"
                android:maxLines="1"
                android:textCursorDrawable="@drawable/color_cursor"
                android:maxLength="15"
                android:textColor="#1d1d26"
                android:textSize="12sp"
                android:hint="服务器地址"
                android:background="@null"
                android:layout_height="25dp"/>
        </android.support.percent.PercentRelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="读取中...."
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"/>
         <android.support.percent.PercentRelativeLayout
             android:layout_width="match_parent"
             android:visibility="invisible"
             android:layout_height="wrap_content">
             <TextView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/take_yuan_gong"
                 android:layout_marginLeft="70dp"
                 android:text="员工:"/>
             <TextView android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/take_yuan_gong"
                 android:text="小周周"/>
         </android.support.percent.PercentRelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/ip_config"
                android:layout_width="wrap_content"
                android:text="确认"
                android:background="@drawable/config_btn"
                android:textSize="12sp"
                android:textColor="@color/color_config"
                android:layout_centerInParent="true"
                android:layout_height="30dp"
                app:layout_widthPercent="40%"
                />
        </android.support.percent.PercentRelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="30dp"></View>
    </LinearLayout>
</LinearLayout>