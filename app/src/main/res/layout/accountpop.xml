<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d150"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:background="@drawable/blacklinerec">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d35"
            android:layout_marginTop="@dimen/d50"
            android:layout_marginLeft="@dimen/d20"
            android:layout_marginRight="@dimen/d20"
            android:background="@drawable/blacklinerecra">
            <EditText
                android:id="@+id/acctext_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d1"
                android:textCursorDrawable="@drawable/color_cursor"
                android:background="@null"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/cancle_id"
                    android:layout_width="@dimen/d70"
                    android:layout_height="@dimen/d30"
                    android:textSize="@dimen/s13"
                    android:text="@string/cancel"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/blacklinerecra"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/save_id"
                    android:layout_width="@dimen/d70"
                    android:layout_height="@dimen/d30"
                    android:text="@string/save"
                    android:textSize="@dimen/s13"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/blacklinerecra"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>