<?xml version="1.0" encoding="utf-8"?><!--关于界面item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d50"
    android:background="@color/clore3e">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50">

        <ImageView
            android:id="@+id/imageone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d10"
            android:src="@drawable/lamp" />

        <TextView
            android:id="@+id/macname_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d20"
            android:layout_toRightOf="@+id/imageone"
            android:text="@string/rmone"
            android:textColor="@color/e30"
            android:textSize="@dimen/s13" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d15"
            android:background="@drawable/checkbox"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <View
            android:id="@+id/yeviewtwo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dottedline" />
    </RelativeLayout>

</RelativeLayout>